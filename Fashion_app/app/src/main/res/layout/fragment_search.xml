<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fagment.SearchFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_main"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon"/>
            <TextView
                android:layout_marginLeft="12dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Đơn hàng của bạn"
                android:textColor="#222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ giao hàng"
            android:textStyle="bold"
            android:textColor="#C53232"
            android:textSize="16sp"
            android:drawableLeft="@drawable/mapp"
            android:paddingTop="4dp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mua"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="#388e3c"
            android:textColor="#fff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/txtCartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm trong giỏ hàng"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#C53232"
            android:layout_marginTop="18dp"/>
        <LinearLayout
            android:id="@+id/cartListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</FrameLayout>