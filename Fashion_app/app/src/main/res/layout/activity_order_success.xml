<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background_main">

    <ImageView
        android:id="@+id/imgOrderSuccess"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_order_success"
        android:contentDescription="Đơn hàng thành công" />

    <TextView
        android:id="@+id/tvOrderSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng đã được mua thành công!"
        android:textColor="#222"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btnBackToSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay lại"
        android:textAllCaps="false"
        android:layout_marginTop="32dp"
        android:backgroundTint="#388e3c"
        android:textColor="#fff"
        android:elevation="2dp" />

</LinearLayout>
